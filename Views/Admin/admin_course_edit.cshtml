@model Project3.Models.Course
@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}
<br /><br /><br />
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4"></h5>
            <div class="card">
                <div class="card-body p-4">
                    <h1>Edit Course</h1>
                    <div class="container mt-5 px-2">

                        <div class="mb-2 d-flex justify-content-between align-items-center">
                        </div>
                        <div class="table-responsive">
                            <table class="table table-responsive table-borderless">

                                <tbody>
                                    <tr>
                                        <form asp-action="admin_course_edit" method="post">
                                            <input type="hidden" name="CourseId" value="@Model.CourseId" /> <!-- Giữ lại CourseId để cập nhật -->
                                            <div class="col-md-12">
                                                <label class="labels">Name</label>
                                                <input type="text" name="Name" class="form-control" placeholder="Enter Course Name" value="@Model.Name" required>
                                            </div>
                                            <div class="col-md-12">
                                                <label class="labels">Description</label>
                                                <textarea name="Description" class="form-control" placeholder="Enter Course Description" required>@Model.Description</textarea>
                                            </div>
                                            <div class="col-md-12">
                                                <label class="labels">Price</label>
                                                <input type="number" name="Price" class="form-control" step="0.01" placeholder="Enter Course Price" value="@Model.Price" required>
                                            </div>
                                            <div class="col-md-12">
                                                <label class="labels">Image URL</label>
                                                <input type="text" name="ImageUrl" class="form-control" placeholder="Enter Image URL" value="@Model.ImageUrl" required>
                                            </div>
                                            <div class="col-md-12">
                                                <label class="labels">Category</label>
                                                <select name="CategoryId" class="form-control" required>
                                                    <option value="">Select Category</option>
                                                    <option value="1">Frontend</option>
                                                    <option value="2">Backend</option>
                                                </select>
                                            </div>

                                            <div class="mt-3">
                                                <button type="submit" class="btn btn-primary">Update Course</button>
                                            </div>
                                        </form>

                                        <div class="text-end">
                                            <a href="#" class="btn btn-outline-success m-1">Save</a>
                                        </div>
                                    </tr>

                                </tbody>
                            </table>
                            <div class="text-end">
                                <a asp-area="" asp-controller="Admin" asp-action="admin_course" class="btn-right btn btn-outline-secondary m-1">Back</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
