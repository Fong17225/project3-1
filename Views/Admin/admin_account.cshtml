@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}
@model List<Project3.Models.Account> // Đảm bảo rằng bạn đã chỉ định đúng namespace

<br />
<br />
<br />
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">Account List</h5>
            <div class="card">
                <div class="card-body p-4">
                    <div class="container mt-5 px-2">
                        <div class="mb-3 d-flex justify-content-between align-items-center">
                            <div class="d-flex">
                                <input type="text" class="form-control" placeholder="Search">
                                <button type="button" class="btn btn-primary btn-search ms-2">Search</button>
                            </div>
                            <div>
                                <a asp-area="" asp-controller="Admin" asp-action="admin_account_add" class="btn btn-outline-secondary btn-add m-1">Add</a>
                            </div>
                        </div>
                        <div class="mb-2 d-flex justify-content-between align-items-center">
                        </div>
                        <div class="table-responsive">
                            <table class="table table-responsive table-borderless">
                                <thead>
                                    <tr class="bg-light">
                                        <th>Username</th>
                                        <th>Fullname</th>
                                        <th>Password</th>
                                        <th>Email</th>
                                        <th scope="col" width="20%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var accounts in Model)
                                    {
                                        <tr>
                                            <td style="padding-top: 15px">@accounts.Username</td>
                                            <td style="padding-top: 15px">@accounts.FullName</td>
                                            <td style="padding-top: 15px">@accounts.Password</td>
                                            <td style="padding-top: 15px">@accounts.Email</td>
                                            <td>
                                                <form method="post" asp-action="admin_account_delete" asp-route-id="@accounts.AccountId" onsubmit="return confirm('Are you sure you want to delete this account?');">
                                                    <button type="submit" class="btn btn-outline-danger m-1">Delete</button>
                                                </form>
                                                <a asp-area="" asp-controller="Admin" asp-action="admin_account_edit" asp-route-id="@accounts.AccountId" class="btn btn-outline-success m-1">Edit</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
