@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}
@model List<Project3.Models.Course>

<br />
<br />
<br />
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold"></h5>
            <div class="card">
                <div class="card-body p-4">
                    <div class="container mt-1 px-2">
                        <div class="mb-1 d-flex justify-content-between align-items-center">
                            <div class="d-flex">
                                <input type="text" class="form-control" placeholder="Search">
                                <button type="button" class="btn btn-primary btn-search ms-2">Search</button>
                            </div>
                            <div>
                                <a asp-area="" asp-controller="Admin" asp-action="admin_course_add" class="btn btn-outline-secondary btn-add m-1">Add</a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-responsive table-borderless ">
                                <thead>
                                    <tr class="bg-light">
                                        <th>Course</th>
                                        <th>Price</th>
                                        <th>Image</th>
                                        <th scope="col" width="10%">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model)
                                    {
                                        <tr>
                                            <td>@course.Name</td>
                                            <td>$@course.Price.ToString("0.##")</td>
                                            <td><img src="@course.ImageUrl" alt="" style="height: 150px;"></td>
                                            <td class="d-flex align-items-center justify-content-between td-action">
                                                <form method="post" asp-action="admin_course_delete" asp-route-id="@course.CourseId" onsubmit="return confirm('Are you sure you want to delete this course?');">
                                                    <button type="submit" class="btn btn-outline-danger m-1">Delete</button>
                                                </form>
                                                <a asp-area="" asp-controller="Admin" asp-action="admin_course_edit" asp-route-id="@course.CourseId" class="btn btn-outline-success m-1">Edit</a>
                                                <a asp-area="" asp-controller="Admin" asp-action="admin_course_view" class="btn btn-outline-primary m-1">View</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
